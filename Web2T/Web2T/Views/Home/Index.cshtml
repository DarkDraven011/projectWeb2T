<!-- Begin Product Area -->
<div class="product-area section-space-top-100">
    <div class="container">
        <div class="section-title text-center pb-55">
            <span class="sub-title text-primary">Những mặt hàng mới nhất</span>
            <h2 class="title mb-0">Hàng mới nhập</h2>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="swiper-container product-list-slider border-issue">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.Products)
                        {
                            @await Html.PartialAsync("_ListProductNewPartialView", item.lsProducts)
                        }
