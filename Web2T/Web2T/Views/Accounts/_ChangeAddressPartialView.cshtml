@model Web2T.ModelViews.ChangeAddressViewModel
@using Web2T.Models

<div class="myaccount-address">
    <form asp-controller="Accounts" asp-action="ChangeAddress" method="post" class="myaccount-form">
        <div class="myaccount-form-inner">
            <div class="single-input">
                <label>Nhập địa chỉ mới</label>
                <input asp-for="Address" type="text">
            </div>
            <div class="single-input">
                <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                    <span>Lưu thay đổi</span>
                </button>
            </div>
        </div>
    </form>
</div>