@model Web2T.Models.Post

@{
    ViewData["Title"] = "Chi tiết tin tức: " + Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPosts" asp-action="Index">Danh sách trang</a>
            <span class="breadcrumb-item active">TIN TỨC: @Model.Title.ToUpper()</span>
        </nav>
    </div>
</div>
<div class="main-content">
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                    <img src="~/images/news/@Model.Thumb" alt="@Model.Title">
                </div>
                <div class="m-l-15">
                    <h4 class="m-b-0">@Model.Title</h4>
                    <p class="text-muted m-b-0">ID: @Model.PostId</p>
                </div>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-overview">TỔNG QUAN</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-images">HÌNH ẢNH</a>
            </li>
        </ul>
    </div>
    <div class="container-fluid">
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active" id="product-overview">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">THÔNG TIN TIN TỨC: @Model.Title.ToUpper()</h1>
                        <div class="table-responsive">
                            <table class="product-info-table m-t-20">
                                <tbody>
                                    <tr>
                                        <td>Tiêu đề:</td>
                                        <td class="text-dark font-weight-semibold">@Model.Title</td>
                                    </tr>
                                    <tr>
                                        <td>Alias:</td>
                                        <td class="text-dark font-weight-semibold">@Model.Alias</td>
                                    </tr>
                                    <tr>
                                        <td>MetaDesc:</td>
                                        <td class="text-dark font-weight-semibold">@Model.MetaDesc</td>
                                    </tr>
                                    <tr>
                                        <td>MetaKey:</td>
                                        <td class="text-dark font-weight-semibold">@Model.MetaKey</td>
                                    </tr>
                                    <tr>
                                        <td>Public:</td>
                                        <td>
                                            @if (Model.Published)
                                            {
                                                <div class="switch d-inline m-r-10">
                                                    <input type="checkbox" id="switch-1" checked="" disabled>
                                                    <label for="switch-1"></label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="switch m-r-10">
                                                    <input type="checkbox" id="switch-2" disabled>
                                                    <label for="switch-2"></label>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>IsHot:</td>
                                        <td>
                                            @if (Model.IsHot)
                                            {
                                                <div class="switch d-inline m-r-10">
                                                    <input type="checkbox" id="switch-1" checked="" disabled>
                                                    <label for="switch-1"></label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="switch m-r-10">
                                                    <input type="checkbox" id="switch-2" disabled>
                                                    <label for="switch-2"></label>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>IsNewfeed:</td>
                                        <td>
                                            @if (Model.IsNewfeed)
                                            {
                                                <div class="switch d-inline m-r-10">
                                                    <input type="checkbox" id="switch-1" checked="" disabled>
                                                    <label for="switch-1"></label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="switch m-r-10">
                                                    <input type="checkbox" id="switch-2" disabled>
                                                    <label for="switch-2"></label>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Nội dung Tin tức</h4>
                    </div>
                    <div class="card-body">
                        @Html.Raw(Model.Contents)
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="product-images">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <img class="img-fluid" src="~/images/news/@Model.Thumb" alt="@Model.Title">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Quay lại Danh sách</a>
</div>

