@model Web2T.Models.Location

@{
    ViewData["Title"] = "Thêm mới Tỉnh thành";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thêm mới Tỉnh thành</h1>

<h4>Tỉnh thành</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên Tỉnh thành</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Type</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="control-label">Slug</label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameWithType" class="control-label">Name With Type</label>
                <input asp-for="NameWithType" class="form-control" />
                <span asp-validation-for="NameWithType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PathWithType" class="control-label">Path With Type</label>
                <input asp-for="PathWithType" class="form-control" />
                <span asp-validation-for="PathWithType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentCode" class="control-label">Parent</label>
                <input asp-for="ParentCode" class="form-control" />
                <span asp-validation-for="ParentCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Levels" class="control-label">Level</label>
                <input asp-for="Levels" class="form-control" />
                <span asp-validation-for="Levels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

