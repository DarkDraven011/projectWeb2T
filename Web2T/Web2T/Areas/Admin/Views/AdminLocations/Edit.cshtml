@model Web2T.Models.Location

@{
    ViewData["Title"] = "Chỉnh sửa thông tin tỉnh thành " + Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminLocations" asp-action="Index">Danh sách Tỉnh thành</a>
            <span class="breadcrumb-item active">Chỉnh sửa thông tin Tỉnh thành</span>
        </nav>
    </div>
</div>
<form asp-controller="AdminLocations" asp-action="Edit" asp-route-id="@Model.LocationId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LocationId" />
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Tên tỉnh thành</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Name">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Type</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Type">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Slug</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Slug">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Name With Type</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="NameWithType">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Path With Type</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="PathWithType">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Parent</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="ParentCode">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Level</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Levels">
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

