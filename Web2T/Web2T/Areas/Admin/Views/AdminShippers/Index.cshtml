@model IEnumerable<Web2T.Models.Shipper>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách Shipper</span>
        </nav>
    </div>
</div>
<div class="row m-b-30">
    <div class="col-lg-8">
    </div>
    <div class="col-lg-4 text-right">
        <a class="btn btn-primary" asp-controller="AdminShippers" asp-action="Create"> <i class="anticon anticon-plus-circle m-r-5"></i> <span>Thêm mới Shipper</span>  </a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Họ và tên</th>
                    <th scope="col">Số điện thoại</th>
                    <th scope="col">Công ty trực thuộc</th>
                    <th scope="col">Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.ShipperId</th>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td>@item.Company</td>
                            <td>
                                <a class="btn btn-secondary m-r-5" asp-area="Admin" asp-controller="AdminShippers" asp-action="Details" asp-route-id="@item.ShipperId">Chi tiết</a>
                                <a class="btn btn-success m-r-5" asp-area="Admin" asp-controller="AdminShippers" asp-action="Edit" asp-route-id="@item.ShipperId">Chỉnh sửa</a>
                                <a class="btn btn-danger m-r-5" asp-area="Admin" asp-controller="AdminShippers" asp-action="Delete" asp-route-id="@item.ShipperId">Xóa</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

